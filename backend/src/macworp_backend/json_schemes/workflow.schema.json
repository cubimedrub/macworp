{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Workflow",
  "description": "NF-Cloud workflow definition",
  "properties": {
    "src": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "local" 
            },
            "directory": {
              "description": "Workflow directory",
              "type": "string"
            },
            "script": {
              "description": "Nextflow main script",
              "type": "string"
            }
          },
          "required": [
              "type",
              "directory",
              "script"
            ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "remote" 
            },
            "url": {
              "description": "Repository URL, e.g. https://github.com/cubimedrub/macdii",
              "type": "string"
            },
            "version": {
              "description": "Branch, tag or commit",
              "type": "string"
            }
          },
          "required": [
            "url",
            "version"
          ]
        }
      ]
    },
    "nextflow_parameters": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "description": "Nextflow parameter like `-with-docker`",
                "type": "string"
              },
              "value": {}
            },
            "required": [
              "name",
              "value"
            ]
          }
        ]
      }
    },
    "args": {
      "description": "Nextflow arguments",
      "type": "object",
      "properties": {
        "dynamic": {
          "description": "Nextflow parameters which can be adjusted by the user and will be rendered",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "path" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "selectable_files": {
                    "description": "If true files are selectable.",
                    "type": "boolean"
                  },
                  "selectable_folders": {
                    "description": "If true folders are selectable.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Paths to files or folders, will be returned as comma-separated list",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "paths" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "selectable_files": {
                    "description": "If true files are selectable.",
                    "type": "boolean"
                  },
                  "selectable_folders": {
                    "description": "If true folders are selectable.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Number input.",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "file-glob" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Number input.",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "number" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Text input",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "text" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "is_multiline": {
                    "description": "If true, the input is multiline.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Value select",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "value-select" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "options": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "type": "object",
                          "properties": {
                            "label": {
                              "type": "string"
                            },
                            "value": {}
                          },
                          "required": [
                            "label",
                            "value"
                          ]
                        }
                      ]
                    }
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc",
                  "options"
                ]
              },
              {
                "description": "Separator",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "separator" 
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "label"
                ]
              }
            ]
          }
        },
        "static": {
          "description": "Nextflow parameters which are defined by the server.",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {}
                },
                "required": [
                  "name",
                  "value"
                ]
              }
            ]
          }
        }
      },
      "required": [
        "dynamic",
        "static"
      ]
    }
  },
  "required": [
    "src",
    "nextflow_parameters",
    "args"
  ]
}